<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="368dp"
            android:layout_height="566dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TableRow
                android:layout_width="351dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nombreDisco"
                    android:layout_width="159dp"
                    android:layout_height="36dp"
                    android:text=" Nombre:"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/nombreDetail"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text=" Pepe"
                    android:textAlignment="viewStart" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/discoID"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:text=" ID:"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/numeroDetail"
                    android:layout_width="205dp"
                    android:layout_height="match_parent"
                    android:text=" 1"
                    android:textAlignment="viewStart" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/discoDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:text=" DescripciÃ³n:"
                    android:textAlignment="viewStart" />

                <TextView
                    android:id="@+id/descripcionDetail"
                    android:layout_width="196dp"
                    android:layout_height="match_parent"
                    android:text=" El mas guapo"
                    android:textAlignment="viewStart" />

            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/editarLista"
            android:layout_width="126dp"
            android:layout_height="59dp"
            android:layout_marginBottom="44dp"
            android:text="EDITAR"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>